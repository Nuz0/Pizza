<Page x:Class="pizza.login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pizza"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="login">

    <Grid x:Name="login1" Background="White">
        <Button x:Name="LoginButt" Content="Войти" HorizontalAlignment="Left" Margin="310,290,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.8,0.75" Click="LoginButt_Click"/>
        <TextBox x:Name="textBox_login" HorizontalAlignment="Left" Height="23" Margin="310,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Регистрация" HorizontalAlignment="Left" Margin="310,315,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="310,240,0,0" VerticalAlignment="Top" Width="120" Height="20"/>
        <Label Content="Логин:" HorizontalAlignment="Left" Margin="310,149,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="310,214,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
